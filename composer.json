{
    "name": "escapework/laramedias",
    "description": "A Laravel package that integrates Glide for easily manage medias on your project.",
    "license": "MIT",

    "require": {
        "escapework/laravel-steroids": "0.7.*",
        "league/glide": "^2.2"
    },

    "require-dev": {
        "phpunit/phpunit": "~9.0",
        "mockery/mockery": "1.5.*",
        "orchestra/testbench": "7.4.*",
        "orchestra/testbench-browser-kit": "7.2.*",
        "doctrine/dbal": "~2.3"
    },

    "autoload": {
        "psr-4": {
            "EscapeWork\\LaraMedias\\": "src/"
        },

        "files": [
            "src/functions.php"
        ]
    },

    "autoload-dev": {
        "classmap": [
            "tests/setup",
            "tests/migrations"
        ]
    },

    "extra": {
        "branch-alias": {
            "dev-master": "0.7.*-dev"
        },
        "laravel": {
            "providers": [
                "EscapeWork\\LaraMedias\\Providers\\MediasServiceProvider"
            ]
        }
    },

    "minimum-stability": "dev",
    "prefer-stable": true
}
